{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "Jwt": {
        // key must be changed in production
        "Key": "[JWT_KEY]",
        "Issuer": "localhost"
    },
    "ConnectionStrings": {
        "EventsConnection": "Server=[DATABASE_HOST];Port=[DATABASE_PORT];Database=[DATABASE_EVENTS_NAME];User Id=[DATABASE_USER];Password=[DATABASE_PASSWORD];",
        "AccountsConnection": "Server=[DATABASE_HOST];Port=[DATABASE_PORT];Database=[DATABASE_ACCOUNTS_NAME];User Id=[DATABASE_USER];Password=[DATABASE_PASSWORD];",
        "SubscribersConnection": "Server=[DATABASE_HOST];Port=[DATABASE_PORT];Database=[DATABASE_SUBSCRIBERS_NAME];User Id=[DATABASE_USER];Password=[DATABASE_PASSWORD];"
    }
}